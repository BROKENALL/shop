<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shop.DAO.VipDAO">


    <select id="findAll" resultType="com.shop.model.Vip">
        select *
        from t_vip
    </select>


    <select id="findVipById" parameterType="java.lang.String" resultType="com.shop.model.Vip">
        select *
        from t_vip
        where id = #{id}
    </select>

    <insert id="addVip" parameterType="java.util.Map">
        insert into t_vip(`id`, `password`)
        values (#{id}, #{password});
    </insert>

    <update id="updataPhoto" parameterType="Vip">
        UPDATE t_vip
        set photo = #{photo}
        WHERE id = #{id}
    </update>

    <update id="updataVip" parameterType="Vip">
        UPDATE t_vip
        set name     = #{name},
            birthday = #{birthday},
            sex      = #{sex},
            email    = #{email},
            phone    = #{phone},
            nick_name=#{nickName}
        WHERE id = #{id}
    </update>

    <select id="findNum" resultType="Integer">
        select count(*)
        from t_vip
    </select>


</mapper>