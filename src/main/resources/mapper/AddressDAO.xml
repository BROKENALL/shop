<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.shop.DAO.AddressDAO">

    <select id="findAddressById" resultType="Address" parameterType="java.lang.Integer">
        select `id`,
               `vip_id`,
               `name`,
               `phone`,
               `province_name`,
               `city_name`,
               `area_name`,
               `street_name`,
               `is_default`
        from t_address
        where id = #{id}
    </select>


    <select id="findAllByVipId" resultType="Address" parameterType="java.lang.String">
        select `id`,
               `vip_id`,
               `name`,
               `phone`,
               `province_name`,
               `city_name`,
               `area_name`,
               `street_name`,
               `is_default`
        from t_address
        where vip_id = #{vipId}
    </select>


    <insert id="addAddress" parameterType="Address">
        insert into t_address
        (`vip_id`,
         `name`,
         `phone`,
         `province_name`,
         `city_name`,
         `area_name`,
         `street_name`,
         `is_default`)
        values (#{vipId}, #{name}, #{phone}, #{provinceName}, #{cityName},
                #{areaName}, #{streetName}, #{isDefault})
    </insert>

    <update id="updataIsDefaultAddress" parameterType="Integer">
        update t_address
        set is_default = 1
        where id = #{id}
    </update>

    <update id="updataAll" parameterType="Integer">
        update t_address
        set is_default = 0
        where id != #{id}
    </update>

    <delete id="deleteById" parameterType="Integer">
        delete
        from t_address
        where id = #{id}
    </delete>

    <select id="minId" resultType="Integer">
        select MIN(id)
        from t_address
    </select>




</mapper>